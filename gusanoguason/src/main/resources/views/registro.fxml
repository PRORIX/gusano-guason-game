<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" 
            fx:controller="es.prorix.gusanoguason.controllers.RegistroController"
            prefWidth="500" prefHeight="600">

    <VBox spacing="15" alignment="CENTER" layoutX="50" layoutY="100" prefWidth="400" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        
        <Label text="Registro de Usuario" style="-fx-font-size: 24px; -fx-font-weight: bold;" />

        <TextField fx:id="nombreField" promptText="Nombre completo" maxWidth="300" />
        <TextField fx:id="emailField" promptText="Correo electrónico" maxWidth="300" />
        <PasswordField fx:id="contrasenaField" promptText="Contraseña" maxWidth="300" />

        <Button text="Registrarse" onAction="#registrarUsuario" maxWidth="150" />

        <Label fx:id="mensajeLabel" textFill="red" wrapText="true" maxWidth="300" />
    </VBox>
</AnchorPane>
